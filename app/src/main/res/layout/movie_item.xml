<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    android:layout_margin="5dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/movie_image"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:src="@drawable/apple"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/movie_image"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android创新实验室"
                android:textSize="17sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/text_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型："
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_below="@+id/movie_title"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/movie_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movie_title"
                android:layout_toRightOf="@+id/text_genres"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/text_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分："
                android:layout_below="@+id/text_genres"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/movie_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_average"
                android:layout_below="@id/text_genres"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时长："
                android:layout_below="@+id/text_average"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/movie_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_time"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_below="@+id/text_average"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>
        
    </RelativeLayout>

</androidx.cardview.widget.CardView>